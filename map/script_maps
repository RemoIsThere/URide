stores.features.forEach(function (store, i) {
  store.properties.id = i;
});

function buildLocationList(stores) {
  for (const store of stores.features) {
    /* Add a new listing section to the sidebar. */
    const listings = document.getElementById('listings');
    const listing = listings.appendChild(document.createElement('div'));
    /* Assign a unique `id` to the listing. */
    listing.id = `listing-${store.properties.id}`;
    /* Assign the `item` class to each listing for styling. */
    listing.className = 'item';

    /* Add the link to the individual listing created above. */
    const link = listing.appendChild(document.createElement('a'));
    link.href = '#';
    link.className = 'title';
    link.id = `link-${store.properties.id}`;
    link.innerHTML = `${store.properties.address}`;

    /* Add details to the individual listing. */
    const details = listing.appendChild(document.createElement('div'));
    details.innerHTML = `${store.properties.city}`;
    if (store.properties.phone) {
      details.innerHTML += ` Â· ${store.properties.phoneFormatted}`;
    }
    if (store.properties.distance) {
      const roundedDistance = Math.round(store.properties.distance * 100) / 100;
      details.innerHTML += `<div><strong>${roundedDistance} miles away</strong></div>`;
    }
  }
}

map.on('load', () => {
  /* Add the data to your map as a layer */
  map.addLayer({
    id: 'locations',
    type: 'circle',
    /* Add a GeoJSON source containing place coordinates and information. */
    source: {
      type: 'geojson',
      data: stores
    }
  });
  buildLocationList(stores);
});

// Get user's current geolocation
if (navigator.geolocation) {
  navigator.geolocation.getCurrentPosition(function (position) {
    var userLocation = [position.coords.longitude, position.coords.latitude];
    map.setCenter(userLocation);

    var marker = new mapboxgl.Marker()
      .setLngLat(userLocation)
      .addTo(map);
  }, function (error) {
    if (error.code == error.PERMISSION_DENIED) {
      alert('Geolocation permission denied. Please enable location services to use this feature.');
    } else {
      alert('Geolocation error: ' + error.message);
    }
  });
} else {
  alert('Geolocation is not supported by this browser.');
}




// submit button
const submitButton = document.getElementById("submit_button");
submitButton.addEventListener("click", () => {
  const nameInput = document.getElementById("name").value;
  const optionInput = document.getElementById("option").value;
  const url = "https://example.com/submit";
  const data = {
    name: nameInput,
    option: optionInput
  };
  fetch(url, {
    method: "POST",
    body: JSON.stringify(data)
  })
    .then(response => {
      if (response.ok) {
        alert("Data submitted successfully!");
      } else {
        alert("An error occurred while submitting data.");
      }
    })
    .catch(error => {
      console.error("Error submitting data:", error);
    });
});
